@using App.UI.Web.Application.ExtensionMethods
@model IEnumerable<ASF.Entities.Product>

@{
    ViewBag.Title = "Products list";
}

<h2 id="listaProductos">Lista de Productos</h2>

<a href='@Url.Action("addCart", "Cart")'>
    <i class="fa fa fa-cart-plus fa-4x" style="float:right; padding-right:50px" aria-hidden="true"></i>
</a>

@if (User.IsInRole("Admin"))
{
    <p>@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-sm" })</p>
}  

<hr />


    <div class="container">
        <div class="row">

            @foreach (var item in Model)
            {
                @*<div class="col-sm-2">*@

                    <div class="col-xs-3">

                        <img src=@Url.Content("~/Images/" + item.Image) style="width:150px; height:150px;" />
                        <h4 id="nombre" style="margin-top:10px;">@Html.DisplayFor(modelItem => item.Title)</h4>
                        <p id="description">@Html.DisplayFor(modelItem => item.Description)</p>
                        <p id="precio"> $ @Html.DisplayFor(modelItem => item.Price)</p>
                        <p>@Html.ActionLink("Comprar", "addCart", "Cart", new { id = item.Id }, new { @class = "btn btn-primary" }) @*@Html.ActionLink("Leer más", "Details", new { id = item.Id })*@ </p>
                    </div>

              

            }

            <div style="clear:both;">

            </div>
        </div>
    </div>



